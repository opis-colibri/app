ini_set('display_errors', 1);
ini_set('display_startup_errors', 1);
ini_set('opcache.enable', 0);
error_reporting(-1);

$app = require_once 'bootstrap.php';

if(!$app->info()->cliMode())
{
    die('CLI Mode only' . PHP_EOL);
}

$app->console()->run();
